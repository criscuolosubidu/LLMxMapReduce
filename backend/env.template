# ===== 整合应用配置 =====
# 这是整合了Backend API和LLMxMapReduce的完整配置文件

# ===== Redis配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=llm_mapreduce
REDIS_EXPIRE_TIME=86400

# ===== MongoDB配置 =====
MONGO_URI=mongodb://localhost:27017/
MONGO_DATABASE=llm_mapreduce
MONGO_COLLECTION=surveys

# ===== SQLite数据库配置 =====
DATABASE_URI=sqlite:///app.db
DATABASE_TRACK_MODIFICATIONS=False

# ===== JWT配置 =====
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRES=86400

# ===== Pipeline配置 =====
PIPELINE_CONFIG_FILE=config/model_config.json
PIPELINE_TOP_N=10
PIPELINE_DATA_NUM=50
PIPELINE_PARALLEL_NUM=1
PIPELINE_OUTPUT_EACH_BLOCK=False
PIPELINE_DIGEST_GROUP_MODE=skeleton
PIPELINE_SKELETON_GROUP_SIZE=5
PIPELINE_BLOCK_COUNT=10
PIPELINE_CONV_LAYER=1
PIPELINE_CONV_KERNEL_WIDTH=3
PIPELINE_CONV_RESULT_NUM=3
PIPELINE_TOP_K=5
PIPELINE_SELF_REFINE_COUNT=1
PIPELINE_SELF_REFINE_BEST_OF=1
PIPELINE_CHECK_INTERVAL=5
PIPELINE_TIMEOUT=3600
PIPELINE_USE_SEARCH=True
PIPELINE_SEARCH_MODEL=gemini-2.0-flash-thinking-exp-01-21
PIPELINE_SEARCH_MODEL_INFER_TYPE=OpenAI
PIPELINE_SEARCH_ENGINE=google
PIPELINE_SEARCH_EACH_QUERY_RESULT=10

# ===== API服务配置 =====
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=True
API_CORS_ENABLED=True

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_FILE_ENABLED=True
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===== API密钥 =====
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
SERPER_API_KEY=your-serper-api-key-here

# ===== 其他配置 =====

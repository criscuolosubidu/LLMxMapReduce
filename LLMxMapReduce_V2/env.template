# LLMxMapReduce 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ================================
# API 密钥配置 (必需)
# ================================

# OpenAI API 配置 (用于大语言模型推理)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Google API 配置 (可选，如果使用Google模型)
GOOGLE_API_KEY=your_google_api_key_here

# 搜索引擎API配置 (至少需要一个)
# Serper.dev API (推荐)
SERPER_API_KEY=your_serper_api_key_here

# SerpAPI (可选)
SERP_API_KEY=your_serpapi_key_here

# Bing Search API (可选)
BING_SEARCH_V7_SUBSCRIPTION_KEY=your_bing_search_key_here
BING_SEARCH_V7_ENDPOINT=https://api.bing.microsoft.com/v7.0/search

# ================================
# Redis 配置 (任务管理)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=llm_task:
REDIS_EXPIRE_TIME=86400

# ================================
# MongoDB 配置 (可选，数据存储)
# ================================
MONGO_URI=mongodb://localhost:27017/
MONGO_DATABASE=llm_survey
MONGO_COLLECTION=surveys

# ================================
# Pipeline 配置
# ================================
PIPELINE_CONFIG_FILE=config/model_config_ds.json
PIPELINE_PARALLEL_NUM=1

# ================================
# Web API 服务配置
# ================================
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false

# ================================
# 日志配置
# ================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/web_demo.log

# ================================
# 应用配置
# ================================
# 提示语言 (zh/en)
PROMPT_LANGUAGE=en

# 搜索模型
SEARCH_MODEL=gemini-2.0-flash-thinking-exp-01-21

# ================================
# 代理配置 (可选)
# ================================
# HTTP_PROXY=http://127.0.0.1:7890
# HTTPS_PROXY=http://127.0.0.1:7890
# all_proxy=http://127.0.0.1:7890

# ================================
# 其他安全配置 (可选)
# ================================
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here 
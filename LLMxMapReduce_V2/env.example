# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# Redis配置 - 必需
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# Redis密码和前缀 - 可选
REDIS_PASSWORD=
REDIS_KEY_PREFIX=
REDIS_EXPIRE_TIME=

# MongoDB配置 - 必需
MONGO_URI=mongodb://localhost:27017/
MONGO_DATABASE=your_database_name
MONGO_COLLECTION=your_collection_name

# Pipeline配置 - 必需
PIPELINE_CONFIG_FILE=config/pipeline_config.json
PIPELINE_PARALLEL_NUM=4
PIPELINE_TOP_N=10
PIPELINE_DATA_NUM=100
PIPELINE_OUTPUT_EACH_BLOCK=false
PIPELINE_DIGEST_GROUP_MODE=similarity
PIPELINE_SKELETON_GROUP_SIZE=5
PIPELINE_BLOCK_COUNT=10
PIPELINE_CONV_LAYER=3
PIPELINE_CONV_KERNEL_WIDTH=5
PIPELINE_CONV_RESULT_NUM=20
PIPELINE_TOP_K=5
PIPELINE_SELF_REFINE_COUNT=3
PIPELINE_SELF_REFINE_BEST_OF=5
PIPELINE_CHECK_INTERVAL=30
PIPELINE_TIMEOUT=300
PIPELINE_USE_SEARCH=true
PIPELINE_SEARCH_MODEL=gpt-3.5-turbo
PIPELINE_SEARCH_MODEL_INFER_TYPE=OpenAI
PIPELINE_SEARCH_ENGINE=google
PIPELINE_SEARCH_EACH_QUERY_RESULT=10

# API配置 - 必需
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false
API_CORS_ENABLED=true

# 日志配置 - 必需
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/web_demo.log
LOG_FILE_ENABLED=true
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# API密钥 - 必需
OPENAI_API_KEY=your_openai_api_key_here
# OpenAI API Base - 可选
OPENAI_API_BASE=
# Serper API Key - 可选（如果不使用搜索功能）
SERPER_API_KEY=your_serper_api_key_here
# 提示语言 - 可选
PROMPT_LANGUAGE=zh-CN 